{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", // Ensure the base URL is the root of your project
    "paths": {
      "@tabs/*": ["app/(tabs)/*"],
      "@screens/*": ["app/screens/*"],
      "@/*": ["./*"]
    },
    "jsx": "react"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
